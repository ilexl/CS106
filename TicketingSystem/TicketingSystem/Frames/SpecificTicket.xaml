                    <ComboBox x:Name="Urgency" Height="29" Width="190" Padding="5,0,1,0" FontSize="19" SelectedIndex="2" Margin="10,10,0,0" Background="#cceeff" Foreground="Black" Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}">
                        <ComboBox.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />

                        </ComboBox.Resources>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="#f9f9f9"/>
                                <Setter Property="BorderBrush" Value="#f9f9f9"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                        <ComboBoxItem Content="High"/>
                        <ComboBoxItem Content="Medium"/>
                        <ComboBoxItem Content="Low"/>
                    </ComboBox>





                </StackPanel>



                <Button x:Name="ResolveButton" Grid.Column="6" VerticalAlignment="Bottom" Grid.Row="1" Height="29" FontSize="24" FontWeight="Regular" Margin= "0,0,10,13" FontFamily="{DynamicResource Epilogue}" >
                    <Button.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#cceeff"/>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#99ccff"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    Resolve
                </Button>





